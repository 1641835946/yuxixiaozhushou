<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffe8edf0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            ripple:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/avatar_layout"
        android:layout_width="85.0dip"
        android:layout_height="85.0dip"
        android:layout_marginTop="?attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_class_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageView
            android:background="@drawable/icon_create_room_avater_bg2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/font_51"
        android:textColor="#ff000000"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_class_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="北极熊研究所" />
    <TextView
        android:textSize="@dimen/font_42"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_class_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="28.0dip"
        android:text="一起拿下Andrew Ng 的经典课程！大家跟着我一 起拿奖学金！" />
    <RelativeLayout
        android:id="@+id/class_leader_layout"
        android:background="@color/color_ffffff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/classroom_info_item_height_normal"
        android:layout_marginTop="15.0dip">
        <TextView
            android:textSize="@dimen/font_48"
            android:textColor="#ff000000"
            android:id="@+id/leader_hint"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:text="创建人"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="@dimen/font_36"
            android:textColor="@color/color_94a5af"
            android:id="@+id/tv_class_creater_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/class_member_layout"
        android:background="@color/color_ffffff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/classroom_info_item_height_normal"
        android:layout_marginTop="0.5dip"
        android:layout_below="@id/class_leader_layout">
        <TextView
            android:textSize="@dimen/font_48"
            android:textColor="#ff000000"
            android:id="@+id/member_hint"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:text="班级成员"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="@dimen/font_36"
            android:textColor="@color/color_94a5af"
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <Button
        android:textColor="#ffffffff"
        android:id="@+id/btn_join"
        android:background="@drawable/selector_common_btn"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginRight="20.0dip"
        android:text="加入自习室"
        android:layout_below="@id/class_member_layout" />
</LinearLayout>
